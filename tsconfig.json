{
  "compilerOptions": {
    "declarationDir": "lib",
    "target": "es6",
    "module": "es6",
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017", "dom", "es2018.promise"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}
